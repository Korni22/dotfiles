[user]
  name = Arne Bahlo
  email = hallo@arne.me

[alias]
  authors = "!git log --pretty=format:%aN | sort | uniq -c | sort -rn"
	c = clone --recursive
  ca = !git add -A && git commit -av
  co = checkout
  d = !"git diff-index --quiet HEAD -- || clear; git diff --patch-with-stat"
  l = !"git log --graph --pretty='tformat:%C(yellow)%h{%C(red)%d%C(reset) %s' $* | column -t -s '{' | less -FXRS"
  lg = !"git log --graph --pretty='tformat:%C(yellow)%h{%C(green)%ar{%C(bold blue)%an{%C(red)%d%C(reset) %s' $* | column -t -s '{' | less -FXRS"
  m = merge --no-ff
  s = status -s
  st = stash
  stl = stash list
  stp = stash pop

[apply]
	whitespace = fix

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = simple

[help]
  autocorrect = 0

[core]
  excludesfile = ~/.gitignore
  whitespace = trailing-space, space-before-tab
  quotepath = false

[merge]
  log = true

[status]
  submodulesummary = true
