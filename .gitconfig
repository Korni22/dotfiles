[user]
  name = Arne Bahlo
  email = hallo@arne.me

[alias]
  authors = "!git log --pretty=format:%aN | sort | uniq -c | sort -rn"
  c = clone --recursive
  ca = !git add -A && git commit -av
  co = checkout
  d = !"git diff-index --quiet HEAD -- || clear; git diff --patch-with-stat"
  l = log --graph --decorate --pretty=oneline --abbrev-commit
  m = merge --no-ff
  md = !sh -c 'git merge --no-ff $1 && git branch -d $1' -
  s = status -s
  st = stash
  stl = stash list
  stp = stash pop

[apply]
  whitespace = fix

[core]
  excludesfile = /opt/boxen/config/git/gitignore
  whitespace = trailing-space, space-before-tab
  quotepath = false

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = simple

[help]
  autocorrect = 0

[core]
  excludesfile = /opt/boxen/config/git/gitignore
  whitespace = trailing-space, space-before-tab
  quotepath = false

[merge]
  log = true

[status]
  submodulesummary = true

[column]
   ui = auto

[credential]
helper = /opt/boxen/bin/boxen-git-credential

[hub]
protocol = https
