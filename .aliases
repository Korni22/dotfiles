# Easier navigation
alias ..="cd .."
alias ..."cd ../.."
alias ....="cd ../../.."

# Shortcuts
alias d="cd ~/Documents/Dropbox"
alias dl="cd~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias gh="cd ~/GitHub"

# List all files colorized in long format
alias l="ls -l ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -la ${colorflag}"

# Really important
alias please="sudo "
